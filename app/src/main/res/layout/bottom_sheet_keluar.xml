<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_roundedtop_putih"
    android:orientation="vertical"
    android:padding="20dp">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        app:lottie_fileName="question.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar dari Gerai Pay"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_33"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamu yakin ingin keluar dari aplikasi Gerai Pay?"
        android:textColor="@color/text_33"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_max"
            android:backgroundTint="@color/hijau"
            android:text="Keluar Sekarang"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:id="@+id/btn_keluar"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_max"
            android:backgroundTint="@color/red"
            android:text="Batal"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:id="@+id/btn_batal"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</LinearLayout>