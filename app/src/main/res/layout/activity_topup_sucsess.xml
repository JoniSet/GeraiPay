<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TopupSucsessActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            app:lottie_fileName="sukses_centang.json"
            app:lottie_loop="false" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo_geraipay_outline_putih"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Berhasil !!!"
            android:textColor="@color/putih"
            android:fontFamily="@font/poppins_bold"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Pembayaran telah diverifikasi\nSaldo anda akan bertambah secara otomatis"
            android:textColor="@color/putih"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Tutup"
            android:textColor="@color/putih"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_tepi_success"
            android:id="@+id/txt_tutup"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>